{
    "version": "2.0.0",
    "type": "shell",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "isBackground": true,
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:\\Program Files\\Java\\jdk-16.0.2\\bin\\javac.exe",
            "args": [
                "-Xlint:none", 
                "-cp", "'${workspaceFolder};${workspaceFolder}\\;${fileDirname}'", 
                "--module-path", "${workspaceFolder}\\javafx-sdk-17.0.1\\lib", 
                "--add-modules=javafx.controls", 
                "-encoding", "utf8", 
                "${file}"]
        },
        {
            "label": "debug",
            "dependsOn": "build",
            "type": "shell",
            "command": "C:\\Program Files\\Java\\jdk-16.0.2\\bin\\java.exe",
            "args": [
                "-cp", "'${workspaceFolder}\\;${fileDirname}'", 
                "--module-path", "${workspaceFolder}\\javafx-sdk-17.0.1\\lib", 
                "--add-modules=javafx.controls", 
                "${fileBasenameNoExtension}"],
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}
